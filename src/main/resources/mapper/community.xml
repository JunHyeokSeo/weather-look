<?xml version="1.0" encoding="UTF-8" ?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="comm">
    
   <insert id = "insert" parameterType="comm">
   insert into community values(community_seq.nextval,#{title},0,sysdate,#{content},1,#{nick},#{category})  
   </insert>
	
	<select id="count" resultType="int">
		select count(*) from community
	</select>

	<select id="list" parameterType="int" resultType="comm">
		<![CDATA[
		select * from (select rownum rnum, comm.* from (
		select * from community order by post_id desc) comm)
		where rnum >= ((#{page}-1) * 10 + 1) and rnum <= (#{page} * 10)	
		]]>
	</select>
	
